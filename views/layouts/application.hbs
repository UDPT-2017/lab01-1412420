		var topHeader = $("#top-header");
		var topHeight = topHeader.outerHeight();
		var nav = $("#nav-top");		
		$(window).scroll(function(e){
			var top = (window.pageYOffset || document.scrollTop)  - (document.clientTop || 0);
			if(top >= topHeight) {
				nav.addClass("fixed-nav-nar green-bg");
			}else {
				nav.removeClass("fixed-nav-nar green-bg");
			}
		});

